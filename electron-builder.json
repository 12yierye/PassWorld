{
  "appId": "com.passworld.app",
  "productName": "PassWorld",
  "copyright": "Copyright Â© 2024 PassWorld Team",
  "directories": {
    "output": "build-new",
    "buildResources": "assets"
  },
  "files": [
    "**/*",
    "!node_modules/**/*",
    "!dist/**/*",
    "!build/**/*",
    "!build-new/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/Normal Locker.png",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/Normal Locker.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "assets/Normal Locker.png"
  }
}